<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/msgsection.css">
    <title>UpStart - Comments</title>
</head>
<body>
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a style="text-decoration: none;" href="/postpage"><span class="navbar-brand mb-0 h1">UpStart</span></a>
        </div>
    </nav>
    <div class="header">Share and Care</div>
    <div class="maincontainer">
        <div class="commentsBlock">
            <div class="mainCommentsBlock">
                <% messages.forEach(msg => { %>
                <div class="commentBox">
                    <p><%= msg.semail %></p>
                    <p><%= msg.remail %></p>
                    <p><%= msg.msg %></p>
                </div>
                <% }); %>
            </div>
            <div class="receiveBolck">
                <% rmails.forEach(msg => { %>
                    <div class="commentBox">
                        <p><%= msg.semail %></p>
                        <p><%= msg.remail %></p>
                        <p><%= msg.msg %></p>
                    </div>
                    <% }); %>
            </div>
        </div>
        <div class="commentsWriteBlock">
            <form action="/msg" method="post">
                <div class="mb-3">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="semail" id="semail" placeholder="name@example.com">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="remail" id="remail" placeholder="name@example.com">
                </div>
                <label for="commentarea" class="form-label">Write comment here</label>
                <textarea name="msg" class="form-control" id="commentarea" rows="5" placeholder="comment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">comment</button>
            </form>
        </div>
    </div>
</body>
</html>